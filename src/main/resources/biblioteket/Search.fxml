<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="biblioteket.SearchController">
    <stylesheets>
        <URL value="@/styles/search.css" />
    </stylesheets>
   <children>
      <TextField fx:id="txtSearch" layoutX="40.0" layoutY="14.0" promptText="Sök" text="Sökfält" />
      <Button fx:id="btnSearch" layoutX="40.0" layoutY="43.0" mnemonicParsing="false" onAction="#pressSearchBtn" text="Sök" />
      <TableView fx:id="tblSearch" layoutX="40.0" layoutY="75.0" />
      <VBox alignment="CENTER_LEFT" layoutX="227.0" layoutY="13.0" prefHeight="60.0" prefWidth="100.0">
         <children>
            <CheckBox fx:id="checkBook" mnemonicParsing="false" text="Böcker">
               <VBox.margin>
                  <Insets bottom="3.0" />
               </VBox.margin>
            </CheckBox>
            <CheckBox fx:id="checkMagazine" mnemonicParsing="false" text="Tidningar">
               <VBox.margin>
                  <Insets bottom="3.0" />
               </VBox.margin>
            </CheckBox>
            <CheckBox fx:id="checkMovie" mnemonicParsing="false" text="Filmer">
               <VBox.margin>
                  <Insets bottom="3.0" />
               </VBox.margin>
            </CheckBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
